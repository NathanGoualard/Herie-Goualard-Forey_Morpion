<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.simplerp.morpion.accueille.AccueilleController"
      alignment="CENTER" spacing="20">

    <Label text="Morpion">
        <font>
            <Font size="36"/>
        </font>
    </Label>

    <Button fx:id="bouton1Joueur" text="1 Joueur" onAction="#lancer1Joueur"/>
    <Button fx:id="bouton2Joueurs" text="2 Joueurs" onAction="#lancer2Joueurs"/>
    <Button fx:id="boutonScores" text="Scores" onAction="#afficherScores"/>

</VBox>