<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.simplerp.morpion.pageJeu.JeuController"
      fx:id="vboxPrincipal"
      stylesheets="@CSS/StyleJeu.css"
      alignment="CENTER">

    <HBox alignment="CENTER_LEFT">
        <Button fx:id="boutonAccueil" text="← Retour" onAction="#allerAccueil"/>
        <VBox.margin>
            <Insets top="10" right="20" bottom="20" left="20"/>
        </VBox.margin>
    </HBox>

    <Label fx:id="TitreJeu" text="MORPION">
        <VBox.margin>
            <Insets bottom="20"/>
        </VBox.margin>
    </Label>

    <VBox alignment="CENTER" spacing="10" fx:id="VBoxJeu">

        <Label fx:id="labelJoueur" text="" visible="false" managed="false"/>

        <HBox alignment="CENTER" spacing="30">
            <Label fx:id="scoreJ1Label" text="Joueur 1 X : 0"/>
            <Separator orientation="VERTICAL" prefHeight="30"/>
            <Label fx:id="scoreJ2Label" text="Joueur 2 O : 0"/>
        </HBox>

        <VBox.margin>
            <Insets bottom="20"/>
        </VBox.margin>
    </VBox>

    <GridPane fx:id="grilleJeu" alignment="CENTER">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
    </GridPane>

</VBox>
